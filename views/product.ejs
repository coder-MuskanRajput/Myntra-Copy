    <div class="prdctTopDiv">
        <span class="goToCategory normalTXT"><a class="normalTXT" href="/">Home</a> / <a class="normalTXT" href="/<%= product.mainCategory%>"><%= product.mainCategory%></a> / <a class="normalTXT"  href="/<%= product.category%>"><%= product.category%></a> / <a  class="normalTXT"href="<%=product.subCategory%>"><%=product.subCategory%></a> / <span class="prodcutNameCate bold"><%=product.title%></span> > <a class="normalTXT bold" href="brand/<%= product.brand %>">More product by <%= product.brand %></a></span>
    </div>
    <div class="prdctBottomDiv">
        <div class="allImagesDiv">
           <% product.images.forEach((img)=>{ %>
            <img src="<%= img %>" alt="<%= img %>" class="productImage">
           <% }) %>
        </div>
        <div class="prctDetailsDiv">
            <h2 class="brandName"><%= product.brand %></h2>
            <h3 class="prdctTitle"><%= product.title %></h3>
            <% let numb = product.ratingCount.toString();%>
            <% let shortNumb;%>
            <%if(numb.length <= 3){%>
            <%    shortNumb = numb;%>
            <%} else if (numb.length >= 3 && numb.length <= 6) {%>
            <%    let checkD = numb/1000%>
            <%    let split = (checkD.toString()).split('.') %>
            <%    console.log(split)%>
            <%    let scSplit = split[1].split('')%>
            <%    shortNumb = split[0] + "." + scSplit[0] + 'k' %>
            <%}%>
            <div class="ratingDiv"><span class="normalTXT bold"><%= product.rating %> </span> <i class="ri-star-fill starRating"></i> <span class="normalTXT"> | </span> <span class="normalTXT prdctTitle"><%= shortNumb %> Ratings</span></div>
            <hr class="hrDDD">
            <div class="MRPDiv">
                <% if(discount === 0){ %>
                    <span class="mrpShow">₹ <%= product.price%></span>
                <% } else { %>
                   <% let discountPrice = (product.price * discount)/100 %>
                   <span class="mrpShow">₹ <%= discountPrice %></span> <span class="orignalPrice">MRP<span class="strike"><%= product.price%></span></span><span class="discountShow"> (<%= discount %>% OFF)</span>
              <%  } %>
            </div>
            <span class="allTax normalTXT bold">inclusive of all taxes</span>
            <span class="sizeChartTXT bold">SELECT SIZE</span>
            <div class="sizeChartDiv">
              <% product.size.forEach((sizz)=>{ %>
                <span class="size"><%= sizz %></span>
              <%})%>
            </div>

            <div class="buttons">
                <button  class="addCard">
                    <%if(isAdd.includes(product._id)){%>

                       <a class="addCard" href="/cart"> <i class="ri-arrow-right-line"></i> Go to Bag </a>
                    <%}else{%>
                       <a class="addCard" href="/addProduct/productList/<%= product._id%>"> <i class="ri-shopping-bag-line"></i>  Add to Cart </a>
                        <%}%>
                
                </button>

                <button onclick= 'handleLike("<%=product._id %>")' class="addWishlist">
                    <%if(isUser.includes(product._id)){%>

                    <i id="heart" class="makeRed ri-heart-fill"></i>  
                    <%}else{%>
                        <i id="heart" class="ri-heart-fill"></i>  

                        <%}%>

                    Wishlist</button>
            </div>
          <br>
            <hr>
          <br>
           <div class="discription">
